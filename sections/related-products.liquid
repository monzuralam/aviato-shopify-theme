<section class="products related-products section">
    <div class="container">
        <div class="row">
            <div class="title text-center">
                <h2>Related Products</h2>
            </div>
        </div>
        <div class="row">
            {% for collection in product.collections %}
                {% for related_product in collection.products %}
                    {% unless related_product.handle == product.handle %}
                    <div class="col-md-3">
                        <div class="product-item">
                            <div class="product-thumb">
                                <span class="bage">Sale</span>
                                <img class="img-responsive" src="{{ related_product.featured_image.src | img_url: 'large' }}" alt="product-img" />
                                <div class="preview-meta">
                                    <ul>
                                        <li>
                                            <span data-toggle="modal" data-target="#product-modal">
                                                <i class="tf-ion-ios-search"></i>
                                            </span>
                                        </li>
                                        <li>
                                            <a href="#"><i class="tf-ion-ios-heart"></i></a>
                                        </li>
                                        <li>
                                            <a href="#!"><i class="tf-ion-android-cart"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="product-content">
                                <h4><a href="{{ related_product.url }}">{{ related_product.title }}</a></h4>
                                <p class="price">{{ related_product.price | money }}</p>
                            </div>
                        </div>
                    </div>
                    {% endunless %}
                {% endfor %}
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
{
    "name"      : "Related Products",
    "settings"  : [
    ],
    "presets"   : [
        {
            "name"  : "Related Products"
        }
    ]
}
{% endschema %}